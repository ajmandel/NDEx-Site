			ndexClient.deleteNetworkFromUserWorkspace(user.jid, network.jid, function(data) {});
			var child = document.getElementById('thumbnail' + network.jid);
			parent.removeChild(child);
			onWorkspace(network.jid);
		}
	});
	
}

