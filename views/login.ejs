<% include head.ejs %>
<% include nav.ejs %>

<% if (message) {%>
<p><%= message %></p>
<%}%>

<form name="login" action="/login" method="post" id="loginForm" onsubmit="saveCredentials()">
	<div>
	<label>Username:</label>
	<input type="text" name="username"/><br/>
	</div>
	<div>
	<label>Password:</label>
	<input type="password" name="password"/>
	</div>
	<div>
	<input type="submit" value="Submit"/>
	</div>
</form>
<p><small>Hint - me5:pass</small></p>
<p><small>Not an NDEx member? click <a href="/join">here</a> to join</small></p> 

<script>
function saveCredentials() {
	if(typeof(Storage)!=="undefined") {
  		localStorage.ndexUsername = document.forms["login"]["username"].value;
  		localStorage.ndexPassword = document.forms["login"]["password"].value;
	}
}
</script>
